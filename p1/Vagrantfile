#require_relative './scripts/load_env.rb'



Vagrant.configure("2") do |config| # "2" => version de la configuration

  config.vm.define "cuzureauS" do |server|
    server.vm.box = "generic/alpine319"
    server.vm.network "private_network", ip: "192.168.56.110"
    server.vm.synced_folder "shared", "/vagrant"
    server.vm.provision "K3S Controller Mode", type: "shell", path: "./scripts/server_install.sh", env: {"SERVER_IP"=>"192.168.56.110", "PATH_K3S_TOKEN"=>"/var/lib/rancher/k3s/server/node-token", "PATH_SHARED_FOLDER"=>"/vagrant"}
    server.vm.hostname = "cuzureauS"
    server.vm.provider "virtualbox" do |vb|
      vb.name = "cuzureauS"
      vb.memory = 1024
      vb.cpus = 1 
      end
  end

  config.vm.define "cuzureauSW" do |agent|
    agent.vm.box = "generic/alpine319"
    agent.vm.network "private_network", ip: "192.168.56.111"
    agent.vm.synced_folder "shared", "/vagrant"
    agent.vm.provision "K3S Agent Mode", type: "shell", path: "./scripts/agent_install.sh", env: {"AGENT_IP"=>"192.168.56.111", "SERVER_IP"=>"192.168.56.110", "PATH_SHARED_FOLDER"=>"/vagrant"}
    agent.vm.hostname = "uzureauSW"
    agent.vm.provider "virtualbox" do |vb|
      vb.name = "cuzureauSW"
      vb.memory = 1024
      vb.cpus = 1 
      end
  end

end










